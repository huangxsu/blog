
.profile
	border-bottom .5px solid $line-clr
	margin-bottom 40px 
	padding-bottom 8px
	text-align center	
	& .avatar	
		display block
		width 90px
		height 90px
		padding 4px
		border 1px solid $line-clr
		border-radius 50%  	
		box-shadow 0 2px 2px rgba(0,0,0,0.06)	
	& .author
		margin 0
		text-align center	
		font-size 1rem
		color  rgba(0,0,0,0.75)		
	& .social	
		& a
			padding-right 1.5px 
			& i
				font-size 1.35rem