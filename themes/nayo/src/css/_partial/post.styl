

@import '../_import/valine.styl'

.post-header
  position relative 
  margin 3rem 0 2.5rem
  padding 10px 0 
  border-bottom 1px solid $line-clr 
  & > .post-title 
    font-size 2rem 
    margin 0 0 1rem
    color rgba(0,0,0,.9) 
  & > .meta-info
    & > span
      margin-right 12px

.post-content
  min-height 20vh
  margin 2rem 0 
 


    
//
// button
//
.donate-btn,.share-btn 
  cursor pointer
  margin 0 14px
  &:hover
      color $thr-clr
//-------------donate
#donate-box  
  display none
  fixed-center(440px,380px)  
  padding 20px 0
  text-align center
  border-radius: 10px   
  box-shadow: 0 5px 10px 0 rgba(0,0,0,0.05)
 
.donate-cancel
  position absolute
  top 0
  right 24px
  width 12px  
.donate-img-box
  width 260px
  margin 0 auto
.donate-img
  margin-top 0
.donate-word
  display inline-block 
  font-weight 300 
  font-size .9rem
.donate-list 
  height auto
  overflow hidden

//----- donate js
.donate-active
  color $thr-clr
//-------------share
.-mob-share 
  fixed-center(340px,240px)  
  display none    
  padding 20px 0   
  text-align center
  border-radius: 10px   
  box-shadow: 0 5px 10px 0 rgba(0,0,0,0.05)
 

.-mob-share a 
  padding 4px
  font-size 1.28rem 
  display inline-block
  width 80px   
  padding 4px 6px
  margin 4px 
  border-radius 4px
  &:hove
    color $thr-clr 
  cursor pointer
  

.-mob-share-weixin-qrcode-bg    
   background-color rgba(0,0,0,.13) !important 
  
     


.post-meta
  margin 5rem 0 1rem
  & > a
      @extend $item
    
.post-footer
  width 100%
  height 160px
  position relative
  border-top  .5px solid  $line-clr
  border-bottom .5px solid $line-clr
  display flex 
  justify-content space-between 
  align-items center
  padding 22px 0
  margin-bottom 4rem 
  margin-bttom 8rem
  text-align right 
  box-sizing content-box
  & > div
    width 50%
    height 100%   

.pf-avatar
	width 90px
	height 90px
	padding 4px
	border 1px solid $line-clr  
	border-radius 50%  
	box-shadow 0 2px 2px rgba(0,0,0,0.06)	 

.pf-left
  text-align center
  & .pf-des
    color rgba(0,0,0,.65)
    font-size .95rem
    overflow hidden

.pf-right
  display flex 
  flex-direction column 
  & > div,& > nav
    width 100%
    height 50% 
 

.pf-paginator
  display flex
  justify-content center
  align-items flex-end
  & a
    @extend $tips
    @extend $fade
    border-radius 4px 
    padding 6px 12px 
    border 1px solid $line-clr
    margin 0 6px  
   